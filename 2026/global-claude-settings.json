  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "type": "command"
          },
          {
            "type": "command",
            "name": "notify-input",
            "command": "bash ~/.claude/hooks/scripts/notify-input.sh"
          }
        ],
        "matcher": "*"
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "timeout": 86400,
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "type": "command"
          },
          {
            "type": "command",
            "name": "log-conversation",
            "command": "bash ~/.claude/hooks/scripts/log-conversation.sh"
          }
        ],
        "matcher": "*"
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "type": "command"
          }
        ],
        "matcher": "auto"
      },
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "type": "command"
          }
        ],
        "matcher": "manual"
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:8765/hook -H 'Content-Type: application/json' -d \"$(cat)\" > /dev/null 2>&1 &"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "name": "log-commands",
            "command": "bash ~/.claude/hooks/scripts/log-commands.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:8765/hook -H 'Content-Type: application/json' -d \"$(cat)\" > /dev/null 2>&1 &"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:8765/hook -H 'Content-Type: application/json' -d \"$(cat)\" > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "name": "block-apps",
            "command": "curl -X POST https://api.pushcut.io/kmej-19Q2cGviKtcdSh5E/notifications/BlockApps"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:8765/hook -H 'Content-Type: application/json' -d \"$(cat)\" > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "name": "unblock-apps",
            "command": "curl -X POST https://api.pushcut.io/kmej-19Q2cGviKtcdSh5E/notifications/UnblockApps"
          },
          {
            "type": "command",
            "name": "notify-complete",
            "command": "bash ~/.claude/hooks/scripts/notify-complete.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "type": "command"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST http://localhost:8765/hook -H 'Content-Type: application/json' -d \"$(cat)\" > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "name": "log-user-prompts",
            "command": "bash ~/.claude/hooks/scripts/log-user-prompts.sh"
          }
        ]
      }
    ]
  }
}